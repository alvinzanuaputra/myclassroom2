// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  notes String?
  assessments StudentAssessment[]
}

model StudentAssessment {
  id                Int      @id @default(autoincrement())
  studentName       String
  className         String
  teacherId         Int
  
  // Meeting 1 scores
  meeting1_kehadiran    Int @default(1)
  meeting1_membaca      Int @default(1)
  meeting1_kosakata     Int @default(1)
  meeting1_pengucapan   Int @default(1)
  meeting1_speaking     Int @default(1)
  meeting1_total        Int
  
  // Meeting 2 scores
  meeting2_kehadiran    Int @default(1)
  meeting2_membaca      Int @default(1)
  meeting2_kosakata     Int @default(1)
  meeting2_pengucapan   Int @default(1)
  meeting2_speaking     Int @default(1)
  meeting2_total        Int
  
  // Meeting 3 scores
  meeting3_kehadiran    Int @default(1)
  meeting3_membaca      Int @default(1)
  meeting3_kosakata     Int @default(1)
  meeting3_pengucapan   Int @default(1)
  meeting3_speaking     Int @default(1)
  meeting3_total        Int
  
  total_weekly      Int
  average           Float
  category          String
  progress_notes    String?   @db.Text
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  teacher Teacher @relation(fields: [teacherId], references: [id])
}
